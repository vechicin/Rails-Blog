<%= render 'layouts/custom/user_card', user: @user %>

<% @posts.each do |post| %>
  <%= render 'layouts/custom/post_card', post: post %>

  <div>
    <% if post.recent_comments.empty? %>
      <p>No comments yet</p>
    <% else %>
      <% post.recent_comments.each do |comment| %>
        <%= render 'layouts/custom/comment_card', comment: comment %>
      <% end %>
    <% end %>
  </div>
<% end %>